<?xml version="1.0"?>
<CodeConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<Handlers>
		<!-- Source handlers are plugins that help NArrange parse and write source files -->
		<SourceHandler Assembly="NArrange.CSharp, Version=0.1.0.0, Culture=neutral, PublicKeyToken=null">
			<!-- List of project extensions handled by the handler's IProjectParser -->
			<ProjectExtensions>
				<Extension Name="csproj"/>
			</ProjectExtensions>
			<!-- List of source file extensions valid for the handler's ICodeParser-->
			<SourceExtensions>
				<Extension Name="cs"/>
				<!-- If your project uses other extensions for C# files add them here-->
			</SourceExtensions>
		</SourceHandler>
		<SourceHandler Assembly="NArrange.VisualBasic, Version=0.1.0.0, Culture=neutral, PublicKeyToken=null">
			<ProjectExtensions>
				<Extension Name="vbproj"/>
			</ProjectExtensions>
			<SourceExtensions>
				<Extension Name="vb"/>
			</SourceExtensions>
		</SourceHandler>
	</Handlers>
	<Tabs Style="Tabs" SpacesPerTab="4"/>
	<ClosingComments Enabled="false" Format="End $(ElementType) $(Name)"/>
	<Elements>
		<Elements>
			<Element Type="Using">
				<Group By="Name" AttributeCapture="^(.*?)(\.|$)" SeparatorType="NewLine"/>
				<Sort By="Name"/>
			</Element>
		</Elements>
		<!-- End Using -->
		<Element Type="Attribute">
			<Sort By="Name"/>
		</Element>
		<!-- End Attribute -->
		<Element Type="Namespace">
			<Sort By="Name"/>
			<Elements>
				<Element Type="Using">
					<Group By="Name" AttributeCapture="^(.*?)(\.|$)" SeparatorType="NewLine"/>
					<Sort By="Name"/>
				</Element>
				<Elements>
					<Element Type="Enum">
						<Sort By="Name"/>
					</Element>
				</Elements>
				<Elements>
					<Element Type="Delegate">
						<Sort By="Name"/>
					</Element>
				</Elements>
				<Element Type="Type">
					<!-- Interfaces only -->
					<Sort By="Access">
						<Sort By="Name"/>
					</Sort>
					<Filter Condition="$(Type) == 'Interface'"/>
					<Elements>
						<Elements>
							<Element Type="Property">
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Method">
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Event">
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element>
								<Sort By="Name"/>
							</Element>
						</Elements>
					</Elements>
				</Element>
				<!-- End Interface -->
				<Element Type="Type">
					<!-- Classes and structures -->
					<Sort By="Access">
						<Sort By="Name"/>
					</Sort>
					<Elements>
						<Elements>
							<Element Type="Field">
								<Filter Condition="$(Modifier) : 'Constant'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Field">
								<Filter Condition="$(Modifier) : 'Static'"/>
								<!-- Do not sort statics due to dependencies among fields -->
							</Element>
						</Elements>
						<Elements>
							<Element Type="Field">
								<Group By="Access" SeparatorType="NewLine"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Constructor">
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Property">
								<Filter Condition="$(Access) == 'Private'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Property">
								<Filter Condition="$(Access) == 'Protected'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Property">
								<Filter Condition="$(Access) : 'Internal'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Property">
								<Filter Condition="$(Access) == 'Public'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Method">
								<Filter Condition="$(Access) == 'Private'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Method">
								<Filter Condition="$(Access) == 'Protected'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Method">
								<Filter Condition="$(Access) : 'Internal'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Method">
								<Filter Condition="$(Access) == 'Public'"/>
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element Type="Event">
								<Sort By="Name"/>
							</Element>
						</Elements>
						<Elements>
							<Element>
								<Sort By="Name"/>
								<Elements>
									<Element/>
								</Elements>
							</Element>
						</Elements>
					</Elements>
				</Element>
				<!-- End Type -->
			</Elements>
		</Element>
		<!-- End Namespace -->
	</Elements>
</CodeConfiguration>